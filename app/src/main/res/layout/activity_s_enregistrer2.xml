<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".S_enregistrerActivity2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/vous_etes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="62dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_format"
        android:orientation="vertical"
        android:padding="30px"
        app:layout_constraintEnd_toStartOf="@id/textView2"
        tools:layout_editor_absoluteY="115dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/Img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/businessman" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/salarie"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/button_format"
        android:orientation="vertical"
        android:padding="30px"
        app:layout_constraintStart_toEndOf="@id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="115dp">

        <ImageView
            android:id="@+id/Img12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/graduated" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Etudiant"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
